<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<br>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %>/5 - <%= review.content %></li>
  <% end %>
</ul>
<br>

<%= link_to "Review this restaurant", new_restaurant_review_path(@restaurant)%>
<%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant)%>
<%= link_to "Back to restaurants", restaurants_path %>
