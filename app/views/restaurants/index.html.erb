<div class="container">
  <h1>Restaurants</h1>
  <ul class="list-unstyled d-flex">
    <% @restaurants.each do |restaurant| %>
      <li class="d-flex justify-content-around card w-25 m-3 p-3" style="width: 18rem;">
        <h5><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
        <p class="m-0"><%= link_to "Delete", restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
      </li>
    <% end %>
  </ul>
  <%= link_to "Create a new restaurant", new_restaurant_path %>
</div>
